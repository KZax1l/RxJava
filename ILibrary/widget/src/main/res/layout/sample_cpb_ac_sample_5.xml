<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.dd.CircularProgressButton
            android:id="@+id/circularButton1"
            android:layout_width="196dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/cpb_white"
            android:textSize="18sp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="@string/sample_cpb_Complete"
            app:cpb_textError="@string/sample_cpb_Error"
            app:cpb_textIdle="@string/sample_process_button_Upload"
            app:cpb_selectorIdle="@drawable/sample_cpb_idle_state_selector"
            app:cpb_selectorComplete="@drawable/sample_cpb_complete_state_selector"
            app:cpb_selectorError="@drawable/sample_cpb_error_state_selector"/>

    <com.dd.CircularProgressButton
            android:id="@+id/circularButton2"
            android:layout_width="196dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/cpb_white"
            android:textSize="18sp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="@string/sample_cpb_Complete"
            app:cpb_textError="@string/sample_cpb_Error"
            app:cpb_textIdle="@string/sample_process_button_Upload"
            app:cpb_selectorIdle="@drawable/sample_cpb_idle_state_selector"
            app:cpb_selectorComplete="@drawable/sample_cpb_complete_state_selector"
            app:cpb_selectorError="@drawable/sample_cpb_error_state_selector"/>

</LinearLayout>
