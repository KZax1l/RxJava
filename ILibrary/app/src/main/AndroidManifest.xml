<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.core.library">
    <!--声明使用相机-->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.nostra13.universalimageloader.sample.UILApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <activity android:name="org.core.library.MainActivity"></activity>

        <activity android:name="com.baoyz.swipemenulistview.demo.MainActivity" />
        <activity android:name="com.baoyz.swipemenulistview.demo.SimpleActivity" />
        <activity android:name="com.baoyz.swipemenulistview.demo.DifferentMenuActivity" />

        <!-- UniversalImageLoader -->
        <activity
            android:name="com.nostra13.universalimageloader.sample.activity.HomeActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.nostra13.universalimageloader.sample.activity.SimpleImageActivity"
            android:label="@string/ac_name_image_list" />
        <activity
            android:name="com.nostra13.universalimageloader.sample.activity.ComplexImageActivity"
            android:label="@string/ac_name_complex" />
        <activity android:name="com.flatbuffer.MainActivity" />

        <receiver android:name="com.nostra13.universalimageloader.sample.widget.UILWidgetProvider">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_uil" />
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>

        <!-- RxGalleryFinal -->
        <activity
            android:name="cn.finalteam.rxgalleryfinal.sample.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.finalteam.rxgalleryfinal.ui.activity.MediaActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Light.Default" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Light.Default" />

        <!-- AndroidSwipeLayout -->
        <activity
            android:name="com.daimajia.swipedemo.MyActivity"
            android:label="@string/app_name"></activity>
        <activity android:name="com.daimajia.swipedemo.ListViewExample" />
        <activity android:name="com.daimajia.swipedemo.GridViewExample" />
        <activity android:name="com.daimajia.swipedemo.RecyclerViewExample" />
        <activity android:name="com.daimajia.swipedemo.NestedExample" />
    </application>

</manifest>